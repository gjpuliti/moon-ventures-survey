// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Form {
  id                  String   @id @default(uuid())
  name                String
  slug                String   @unique
  type                String   @default("post_purchase") // post_purchase, lead_generation, customer_feedback, etc.
  description         String?
  isActive            Boolean  @default(false)
  isPublished         Boolean  @default(false)
  hubspotAccount      String?  @default("minimal") // "minimal" | "hoomy"
  hubspotTargetType   String?  // "contact" | "deal" | null - determines if form syncs to contact or deal
  hubspotTargetIdParam String? // URL parameter name to extract HubSpot ID from (e.g., "contactId", "dealId")
  branding            Json     // { logoUrl, primaryColor, secondaryColor, backgroundColor, textColor }
  settings            Json?    // Form-specific settings
  metadata            Json?    // Additional data
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  publishedAt         DateTime?

  steps    Step[]
  responses FormResponse[]

  @@index([slug])
  @@index([isActive])
  @@index([isPublished])
  @@map("forms")
}

model Step {
  id          String   @id @default(uuid())
  formId      String
  order       Int
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  form       Form       @relation(fields: [formId], references: [id], onDelete: Cascade)
  questions  Question[]

  @@unique([formId, order])
  @@map("steps")
}

model Question {
  id              String   @id @default(uuid())
  stepId          String
  order           Int
  text            String
  type            String   // 'dropdown' | 'checkbox' | 'text' | 'textarea' | 'date' | 'email' | 'phone' | 'rating' | 'nps' | 'number'
  options         Json?    // string[] for dropdown/checkbox
  isRequired      Boolean  @default(false)
  hubspotProperty String
  parentQuestionId String?
  conditionValue  Json?    // string | string[] - answer value(s) that trigger this question
  nestingLevel    Int      @default(0) // 0, 1, 2, or 3
  category        String?  // To group questions in the admin
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  step            Step     @relation(fields: [stepId], references: [id], onDelete: Cascade)
  parentQuestion  Question? @relation("QuestionConditional", fields: [parentQuestionId], references: [id])
  subQuestions    Question[] @relation("QuestionConditional")

  @@unique([stepId, order])
  @@map("questions")
}

model FormResponse {
  id          String   @id @default(uuid())
  email       String
  formId      String
  responses   Json     // [{ questionId: string, value: string | string[] }]
  currentStep Int      @default(1)
  isCompleted Boolean  @default(false)
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  form Form @relation(fields: [formId], references: [id], onDelete: Cascade)

  @@unique([email, formId])
  @@map("form_responses")
}

model AdminUser {
  id         String    @id @default(uuid())
  email      String    @unique
  passwordHash String
  role       String    @default("admin")
  createdAt  DateTime  @default(now())
  lastLoginAt DateTime?

  @@map("admin_users")
}

